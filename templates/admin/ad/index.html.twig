{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces{% endblock %}

{% block body %}
    <div class="container-fluid px-5">
        <h1 class="my-5 text-center">Gestion des plats</h1>

        <table class="table table-hover">

            <thead class="table-primary">
                <th>Id</th>
                <th>Titre</th>
                <th class="text-center">Nombre de commande</th>
                <th class="text-center">Note</th>
                <th class="text-center">Actions</th>
            </thead>

            <tbody>
            {% for ad in pagination.data %}
                <tr>
                    <td>{{ ad.id }}</td>
                    <td>{{ ad.title }}</td>
                    
                    <td class="text-center"><span class="badge badge-info rounded">{{ ad.bookings| length }}</span></td>
                    <td class="text-center"><span class="badge badge-success rounded">{{ ad.averageRatings| number_format(1,',',' ') }}</span></td>
                    <td class="text-center">
                        <a href="{{ path('admin_ads_edit',{'id':ad.id}) }}" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i></a>
                        <a href="{{ path('admin_ads_delete',{'id':ad.id}) }}" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {{ pagination.display() }} 
    </div>
    
{% endblock %}
