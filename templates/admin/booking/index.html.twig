{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des réservations{% endblock %}

{% block body %}

    <main class="container-fluid px-5">
    
        <h1 class="my-5 text-center">Gestion des commandes</h1>

        <table class="table">
        
            <thead class="table-primary">
                <th>Id</th>
                <th class="text-center">Date de commande</th>
                <th class="text-center">Client</th>
                <th class="text-center">Plat commandé</th>
                <th class="text-center">Date de réservation</th>
                <th class="text-center">Actions</th>
                
                <th></th>
                <th></th>
            </thead>
            <tbody>
                {% for booking in pagination.data %}
                    <tr>
                        <td>{{ booking.id }}</td>
                        <td class="text-center">{{ booking.createdAt|date('d/m/Y') }}</td>
                        <td class="text-center">{{ booking.booker.fullName }}</td>
                        <td class="text-center">{{ booking.ad.title }}</td>
                        <td class="text-center">{{ booking.startDate|date('d/m/Y') }}</td>
                        <td class="text-center ">
                            <a href="{{ path('admin_booking_edit',{'id':booking.id}) }}" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i></a>
                            <a href="{{ path('admin_booking_delete',{'id':booking.id}) }}" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                        </td> 
                    </tr>
                {% endfor %}
            </tbody>
        
        </table>
        {{ pagination.display() }} 
    </main>

{% endblock %}
