{% extends 'base.html.twig' %}

{% block title %}Page de profil{% endblock %}

{% block body %}

    <div class="container mt-5 mb-5">
        
        <div class="row align-items-center">
            <div class="col-3 text-center">
                <img src="{{ user.avatar }}" alt="avatar de {{ user.fullName }}" class="avatar mb-3">
                <br>
            </div>
            <div class="col-9">
                <div class="mt-3 text-center col-md-10 ">
                            <h1 class="mt-4">{{ user.fullName }}</h1>
                        </div>

                
                {% if user is same as (app.user) %}
                    <div class="row  text-center">
                        <div class="mt-5 col-md-5">
                            <a href="{{ path('account_profile') }}" class="btn btn-secondary">Modifier mes informations</a>
                        </div>
                        <div class="mt-5 col-md-5">
                            <a href="{{ path('account_password') }}" class="btn btn-secondary">Modifier mon mot de passe</a>
                        </div>
                    </div>
                    <div class="row text-center">
                        <div class="mt-5 col-md-5">
                            <a href="{{ path('account_bookings') }}" class="btn btn-secondary">mes commandes</a>
                        </div>   
                        <div class="mt-5 mb-5 col-md-5">
                            <a href="{{ path('account_books') }}" class="btn btn-secondary">mes reservations</a>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
      

    </div>

{% endblock %}
